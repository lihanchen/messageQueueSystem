<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingTop="30dp"
            android:padding="20dp"
            android:fillViewport="false"
            android:id="@+id/scrollView">
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:weightSum="1">

        <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:columnCount="2"
                android:rowCount="2">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your ID:"
                    android:id="@+id/textView"
                    android:layout_gravity="center|left"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextID"
                    android:layout_gravity="center"
                    android:layout_marginRight="55dp"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Server IP:"
                      android:id="@+id/textView5"
                      android:layout_gravity="center|left"/>
            <EditText android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/editTextIP"
                      android:layout_gravity="center"
                      android:layout_marginRight="55dp"
                      android:textSize="12sp"
                    />
        </GridLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">
            <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="StartServer"
                    android:id="@+id/buttonStartServer"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="20dp"/>
            <Button style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="StopServer"
                    android:id="@+id/buttonStopServer"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="20dp"/>
        </LinearLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send Message:"
                android:id="@+id/textView2"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:weightSum="1">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="targetID:"
                    android:id="@+id/textView3"/>
            <EditText
                    android:layout_width="117dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextTarget"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:singleLine="true"/>
            <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Send"
                    android:id="@+id/buttonSend"
                    android:minWidth="10dp"
                    android:layout_weight="0"
                    />
        </LinearLayout>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTextMsg"
                android:layout_margin="15dp"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Send Broadcast:"
                  android:id="@+id/textView4"
                  android:layout_gravity="center_horizontal"
                  android:layout_marginTop="50dp"/>
        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/editTextGroupMsg"
                  android:layout_margin="15dp"/>
        <Button style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:text="Send"
                android:id="@+id/buttonSendGroup"
                android:minWidth="10dp"
                android:layout_weight="1.13"/>
        <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Broadcast Picture"
                android:id="@+id/buttonBroadcastPic"
                android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</ScrollView>

